<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qingming.jobserver.mapper.UserMapper">
    <resultMap id="BaseResultMap" type="com.qingming.jobserver.model.entity.User">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="username" property="username"/>
        <result column="password" property="password"/>
        <result column="mobile" property="mobile"/>
        <result column="email" property="email"/>
        <result column="avatar" property="avatar"/>
        <result column="role" property="role" typeHandler="org.apache.ibatis.type.EnumTypeHandler"/>
        <result column="create_time" property="createTime"/>
        <result column="account_status" property="accountStatus" typeHandler="org.apache.ibatis.type.EnumTypeHandler"/>
    </resultMap>

    <!-- 求职者完整资料结果映射 -->
    <resultMap id="JobSeekerProfileResultMap" type="com.qingming.jobserver.model.vo.JobSeekerProfileVO">
        <!-- 用户基本信息 -->
        <id column="id" property="id"/>
        <result column="username" property="username"/>
        <result column="mobile" property="mobile"/>
        <result column="email" property="email"/>
        <result column="avatar" property="avatar"/>
        <result column="role" property="role" typeHandler="org.apache.ibatis.type.EnumTypeHandler"/>
        <result column="create_time" property="createTime"/>
        <result column="account_status" property="accountStatus" typeHandler="org.apache.ibatis.type.EnumTypeHandler"/>
        
        <!-- 求职者详细信息 -->
        <result column="real_name" property="realName"/>
        <result column="gender" property="gender" typeHandler="org.apache.ibatis.type.EnumTypeHandler"/>
        <result column="birthday" property="birthday"/>
        <result column="job_status" property="jobStatus" typeHandler="org.apache.ibatis.type.EnumTypeHandler"/>
        <result column="expect_position" property="expectPosition"/>
        <result column="work_years" property="workYears"/>
        <result column="skill" property="skill"/>
        <result column="certificates" property="certificates"/>
        <result column="resume_url" property="resumeUrl"/>
    </resultMap>

    <select id="selectByUsername" resultMap="BaseResultMap">
        SELECT * FROM user WHERE username = #{username}
    </select>

    <select id="selectByMobile" resultMap="BaseResultMap">
        SELECT * FROM user WHERE mobile = #{mobile}
    </select>

    <select id="selectByEmail" resultMap="BaseResultMap">
        SELECT * FROM user WHERE email = #{email}
    </select>

    <select id="selectByUsernameAndPassword" resultMap="BaseResultMap">
        SELECT * FROM user 
        WHERE username = #{username} AND password = #{password}
    </select>

    <!-- 获取最新的用户ID -->
    <select id="getLatestUserId" resultType="java.lang.Long">
        SELECT IFNULL(MAX(id), 0) FROM user
    </select>

    <!-- 插入项目经理用户基础信息 -->
    <insert id="insertProjectManagerUser" parameterType="map">
        INSERT INTO user (
            id, username, password, email, role, account_status, create_time
        ) VALUES (
            #{params.id},
            #{params.username},
            #{params.password},
            #{params.email},
            #{params.role},
            #{params.accountStatus},
            #{params.createTime}
        )
    </insert>

    <!-- 插入用户基础信息 -->
    <insert id="insertJobSeekerUser" parameterType="map">
        INSERT INTO user (
            username, password, mobile, email, role, account_status
        ) VALUES (
            #{params.username},
            #{params.password},
            #{params.mobile},
            #{params.email},
            'job_seeker',
            'pending'
        )
        <selectKey resultType="long" keyProperty="params.id" order="AFTER">
            SELECT LAST_INSERT_ID()
        </selectKey>
    </insert>

    <!-- 插入求职者扩展信息 -->
    <insert id="insertJobSeekerExt" parameterType="map">
        INSERT INTO job_seeker (
            user_id, job_status
        ) VALUES (
            #{params.id},
            'seeking'
        )
    </insert>    <!-- 动态更新求职者信息 - 用户基本信息 -->
    <update id="updateUserBasicInfo" parameterType="map">
        UPDATE user
        <set>
            <if test="params.avatar != null">avatar = #{params.avatar},</if>
            <if test="params.mobile != null">mobile = #{params.mobile},</if>
            <if test="params.email != null">email = #{params.email},</if>
            <!-- 添加默认字段防止SET空 -->
            create_time = create_time
        </set>
        WHERE id = #{params.id}
    </update>
    
    <!-- 动态更新求职者信息 - 求职者扩展信息 -->
    <update id="updateJobSeeker" parameterType="map">
        UPDATE job_seeker
        <set>
            <if test="params.realName != null">real_name = #{params.realName},</if>
            <if test="params.gender != null">gender = #{params.gender},</if>
            <if test="params.birthday != null">birthday = #{params.birthday},</if>
            <if test="params.expectPosition != null">expect_position = #{params.expectPosition},</if>
            <if test="params.workYears != null">work_years = #{params.workYears},</if>
            <if test="params.skill != null">skill = #{params.skill},</if>
            <if test="params.certificates != null">certificates = #{params.certificates},</if>
            <if test="params.resumeUrl != null">resume_url = #{params.resumeUrl},</if>
            <!-- 添加默认字段防止SET空 -->
            job_status = job_status
        </set>
        WHERE user_id = #{params.id}
    </update>
    
    <!-- 获取求职者完整资料 -->
    <select id="getJobSeekerProfile" resultMap="JobSeekerProfileResultMap">
        SELECT 
            u.id, u.username, u.mobile, u.email, u.avatar, u.role, u.create_time, u.account_status,
            js.real_name, js.gender, js.birthday, js.job_status, js.expect_position, 
            js.work_years, js.skill, js.certificates, js.resume_url
        FROM 
            user u
        LEFT JOIN 
            job_seeker js ON u.id = js.user_id
        WHERE 
            u.id = #{userId} AND u.role = 'job_seeker'
    </select>

    <!-- 更新用户密码 -->
    <update id="updatePassword">
        UPDATE user 
        SET password = #{newPassword}
        WHERE id = #{userId}
    </update>
</mapper>