<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qingming.jobserver.mapper.CompanyMapper">
    <resultMap id="BaseResultMap" type="com.qingming.jobserver.model.entity.Company">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="name" property="name"/>
        <result column="license_number" property="licenseNumber"/>
        <result column="address" property="address"/>
        <result column="legal_person" property="legalPerson"/>
        <result column="create_time" property="createTime"/>
    </resultMap>
    
    <!-- 企业详情结果映射 -->
    <resultMap id="CompanyInfoResultMap" type="com.qingming.jobserver.model.vo.CompanyInfoVO">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="license_number" property="licenseNumber"/>
        <result column="address" property="address"/>
        <result column="legal_person" property="legalPerson"/>
        <result column="create_time" property="createTime"/>
    </resultMap>

    <select id="selectByLicenseNumber" resultMap="BaseResultMap">
        SELECT * FROM company WHERE license_number = #{licenseNumber}
    </select>
    
    <insert id="insertCompany" parameterType="com.qingming.jobserver.model.entity.Company" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO company (
            name, license_number, address, legal_person
        ) VALUES (
            #{name}, #{licenseNumber}, #{address}, #{legalPerson}
        )
    </insert>
    
    <!-- 插入项目经理信息 -->
    <insert id="insertProjectManager">
        INSERT INTO project_manager (
            user_id, company_id, position
        ) VALUES (
            #{userId}, #{companyId}, #{position}
        )
    </insert>
    
    <!-- 根据ID查询企业详情 -->
    <select id="getCompanyInfoById" resultMap="CompanyInfoResultMap">
        SELECT 
            id, name, license_number, address, legal_person, create_time
        FROM 
            company
        WHERE 
            id = #{companyId}
    </select>
    
    <!-- 选择性更新企业信息（只更新非null字段） -->
    <update id="updateCompanySelective" parameterType="com.qingming.jobserver.model.entity.Company">
        UPDATE company
        <set>
            <if test="name != null">name = #{name},</if>
            <if test="address != null">address = #{address},</if>
            <if test="legalPerson != null">legal_person = #{legalPerson},</if>
        </set>
        WHERE id = #{id}
    </update>
    
    <!-- 更新企业管理员ID -->
    <update id="updateAdminId">
        UPDATE company
        SET admin_id = #{adminId}
        WHERE id = #{companyId}
    </update>
    
    <!-- 统计用户是否为指定企业的项目经理 -->
    <select id="countProjectManagerByUserIdAndCompanyId" resultType="java.lang.Integer">
        SELECT COUNT(1)
        FROM project_manager
        WHERE user_id = #{userId} AND company_id = #{companyId}
    </select>
    
    <!-- 删除企业记录 -->
    <delete id="deleteCompanyById">
        DELETE FROM company
        WHERE id = #{companyId}
    </delete>
    
    <!-- 删除企业相关的项目经理记录 -->
    <delete id="deleteProjectManagersByCompanyId">
        DELETE FROM project_manager
        WHERE company_id = #{companyId}
    </delete>
    
    <!-- 检查企业是否有关联的项目 -->
    <select id="countRelatedProjects" resultType="java.lang.Integer">
        SELECT COUNT(1)
        FROM construction_project
        WHERE company_id = #{companyId}
    </select>
</mapper>
